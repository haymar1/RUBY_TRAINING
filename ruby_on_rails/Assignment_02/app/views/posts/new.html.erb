<% #= render 'form', post: @post %>
<% #= link_to 'Back', posts_path %>
<%= form_with model: @post, url: posts_path do |f| %>
  <div class="usertable">
<h2 class="title">Add a post:</h2>
  <p>
    <%= f.label :title, "Title:" %>&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; &nbsp;  &nbsp;&nbsp; 
    <%= f.text_field :title, class: "form-control-user" %>
  </p>
  <p>
    <%= f.label :description, "Description:" %>
    <%= f.text_area :description, class: "form-control-user" %>
  </p>
  <p>
    <%= f.label :public_flag, "Public Flag:" %>
    <%= f.radio_button :public_flag, class: "form-control-user" %>
  </p>
      <p>
    <%= f.label :user_id, "User ID:" %>&nbsp;&nbsp; &nbsp;  &nbsp;   
    <%= f.text_field :user_id, class: "form-control-user" %> 
  </p>

<div class="title">
  <%= f.submit %>
 </div>
</div>
<% end %>

