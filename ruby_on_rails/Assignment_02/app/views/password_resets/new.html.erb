<div class="login">
  <h1>Forget your Password?</h1>
  <%= form_with url: password_reset_path do |form| %>
    <div class="email">
      <%= form.text_field :email, placeholder: "Email:user@gmail.com", class: "form-control-user" %>
    </div>
    <div class="submit">
      <%= form.submit "Reset Password" %>
    </div>
  <% end %>
</div>
