<!DOCTYPE html>
<html>
  <body>
    <%= button_to "User", users_path, :method => :get, class: "user-btn" %>
    <%= button_to "Post", posts_path, :method => :get , class: "user-btn"%>
    <%= button_to "Create Post", new_post_path,  :method => :get, class: "user-btn" %>
    <%= button_to "Send Post Lists", send_post_path,  :method => :get, class: "user-btn" %>
    <h3>POST LIST</h3>
    <br>
    <table border="2">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.description %></td>
            <div>
              <td>
                <%= link_to "Edit", edit_post_path(post) %>
                <%= link_to "Delete", post_path(id: post.id), method: :DELETE, data: {confirm: "Are you sure?"}  %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </body>
</html>
</div>
