<!DOCTYPE html>
<html>   
<body> 
<p id="notice"><%= notice %></p>  
 <div class="container">
 <h3>POST LIST</h3>   
 <div>   
<%= link_to 'New Post', new_post_path %> 
      </div>   
      <br>   
    <table border="2">   
      <thead>   
      <tr>   
        <th>Name</th>   
        <th>Description</th>   
        <th>Public_Flag</th>   
        <th>Created_at</th>
        <th>Updated_at</th> 
         <th>User Name</th>   
        <th>Action</th>    
      </tr>   
      </thead>   
      <tbody>   
      <% @posts.each do |post| %>   
          <tr>   
            <td><%= post.title %></td>   
            <td><%= post.description %></td>
            <td><%= post.public_flag %></td>
            <td><%= post.created_at %></td>
            <td><%= post.updated_at %></td>
            <td><%= post.user_name %></td>
            <div>   
            <td>   
            <%= link_to 'Show', post %>
        <%= link_to 'Edit', edit_post_path(post) %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
              </div>   
            </td>   
          </tr>   
      <% end %>   
      </tbody>   
    </table>   
    </div>   
  </body>   
</html>  
