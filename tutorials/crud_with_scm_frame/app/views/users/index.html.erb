<!DOCTYPE html>
<html>
  <head>
    <nav>
      <ul>
        <li> <%= link_to "New User", new_user_path %></li>
        <li><%= link_to "Logout", logout_path %></li>
      </ul>
    </nav>
  </head>
  <body>
    <p id="notice"><%= notice %></p>
    <div class="container">
      <h3>USER LIST</h3>
      <br>
      <table border="2">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Super User Flag</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Birthday</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= user.super_user_flag %></td>
              <td><%= user.phone %></td>
              <td><%= user.address %></td>
              <td><%= user.birthday %></td>
              <div>
                <td>
                  <%= link_to "Show", user_path(user) %>
                  <%= link_to "Edit", edit_user_path(user) %>
                  <%= link_to "Delete", user_path(id: user.id), method: :delete %>

                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </body>
</html>
