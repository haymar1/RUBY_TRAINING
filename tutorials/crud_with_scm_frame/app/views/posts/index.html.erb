<!DOCTYPE html>
<html>
  <body>
    <p id="notice"><%= notice %></p>
    <div class="container">
      <h3>USER LIST</h3>
      <div>
        <%= link_to "New Post", new_post_path %>
      </div>
      <br>
      <table border="2">
        <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Public Flag</th>

            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.title %></td>
              <td><%= post.description %></td>
              <td><%= post.public_flag %></td>

              <div>
                <td>
                  <%= link_to "Show", post_path(post) %>
                  <%= link_to "Edit", edit_post_path(post) %>
                  <%= form_with  url:post_path(id: post.id), method: :DELETE do |f| %>
                    <%= f.submit "Destroy" %>
                  <%end%>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </body>
</html>
