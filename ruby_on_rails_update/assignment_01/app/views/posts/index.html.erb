<div class="header">
  <%= link_to "User Lists", users_path, class: "link" %>
  <%= link_to "Post Lists", posts_path, class: "link"  %>
  <%= link_to "Download Post", download_csv_path(format: "csv"), class: "link" %>
  <h3>Post LIST</h3>
  <table border="2">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>User Id</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.description %></td>
          <td><%= post.user_id %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>

  <div class="header">
    <%= form_tag import_posts_path, multipart: true do %>
      <%= file_field_tag :file, required: true %><br><br>
      <%= submit_tag "Import File" %>
    <% end %>
  </div>
