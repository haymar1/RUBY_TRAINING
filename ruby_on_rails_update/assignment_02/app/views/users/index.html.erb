<div class="header">
  <%= link_to "User Lists", users_path,  class: "link" %>
  <%= link_to "Post Lists", posts_path,  class: "link"  %>
  <%= link_to "Logout", logout_path, class: "link" %>
</div>
 <div class="search-form">
      <%= form_with url: search_user_path, method: :get, local: true do |f| %>
        <%= f.text_field :name,placeholder: "User Name" %>
        <%= f.text_field :email, placeholder: "Email" %>
        <%= f.select :super_user_flag, options_for_select([["Choose UserType", ""], ["super user", 1], ["normal user", 0]]), {} %>
        <%= f.text_field :phone,  placeholder: "Phone" %>
        <%= f.text_field :address, placeholder: "Address" %>
        <%= f.date_field :birthday, placeholder: "Birthday" %>
        <%= f.submit "Search" %>
      <% end %>
    </div>
<h3>USER LIST</h3>
<br>
<table border="2">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Super User Flag</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Birthday</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.super_user_flag %></td>
        <td><%= user.phone %></td>
        <td><%= user.address %></td>
        <td><%= user.birthday %></td>
        <div>
          <td>
            <%= link_to "Show", user_path(user) %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
