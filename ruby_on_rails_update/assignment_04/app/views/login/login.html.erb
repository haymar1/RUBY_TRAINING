<h1>SCM FRAMEWORK</h1>
<div class="container">
  <h2>Login Form</h2>
  <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
    <div class="mb-20">
      <%= f.email_field :email, :placeholder => "Enter Email" , class: "text-field", required: true %>
    </div>
    <div class="mb-20">
      <%= f.password_field :password, :placeholder => "Enter Password",  class: "text-field", required: true %>
    </div>
    <div class="submit">
      <%= f.submit "Log in", class: "edit" %>
      </div>
    <div class="header">
      <%= link_to "Forgot your password?", password_reset_path %>
    </div>
  <% end %>
</div>
