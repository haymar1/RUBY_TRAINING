<div class="header">
  <%= link_to "User Lists", users_path, :method => :get, class: "link" %>
  <%= link_to "Post Lists", posts_path, :method => :get, class: "link"  %>
</div>
<h3>Post LIST</h3>
<table border="2">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>User Id</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= post.user_id %></td>
      </tr>
    <% end %>
  </tbody>
</table>
